FROM python:3.8-alpine
RUN apk add -U --no-cache tzdata git gcc build-base libc-dev linux-headers jpeg-dev build-base libffi-dev libxml2-dev libxslt-dev libjpeg-turbo-dev zlib-dev libyaml-dev && \
    cp /usr/share/zoneinfo/Asia/Shanghai /etc/localtime && \
    echo "Asia/Shanghai" > /etc/timezone && \
    git clone --depth=1 https://github.com/txperl/PixivBiu.git && \
    mv PixivBiu/ Pixiv/ && \
    cd /Pixiv && \
    rm -rf ./.git && \
    rm -rf ./.github && \
    rm config.yml && \
    rm .gitattributes && \
    rm .gitignore && \
    rm LICENSE && \
    rm README.md && \
    rm README_EN.md && \
    pip install --upgrade pip && \
    pip install -r requirements.txt --no-cache-dir && \
    apk del tzdata git && \
    rm -rf /var/cache/apk/* && \
    rm -rf /root/.cache && \
    rm -rf /tmp/*
EXPOSE 4001
ENV sys.host="0.0.0.0:4001"
ENV sys.autoOpen=false
ENV sys.ignoreOutdated=true
ENTRYPOINT ["python","/Pixiv/main.py"]