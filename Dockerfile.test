FROM python:3.8-bullseye
RUN apt update && \
    apt install tzdata git gcc libc-dev linux-headers jpeg-dev zlib-dev && \
    cp /usr/share/zoneinfo/Asia/Shanghai /etc/localtime && \
    echo "Asia/Shanghai" > /etc/timezone && \
    git clone --depth=1 https://github.com/txperl/PixivBiu.git && \
    mv PixivBiu/ Pixiv/ && \
    cd /Pixiv && \
    rm -rf ./.git && \
    rm -rf ./.github && \
    rm config.yml && \
    rm .gitattributes && \
    rm .gitignore && \
    rm LICENSE && \
    rm README.md && \
    rm README_EN.md && \
    pip install --upgrade pip setuptools wheel && \
    pip install -r requirements.txt --no-cache-dir && \
    rm -rf /root/.cache && \
    rm -rf /tmp/*
EXPOSE 4001
ENV sys.host="0.0.0.0:4001"
ENV sys.autoOpen=false
ENV sys.ignoreOutdated=true
ENTRYPOINT ["python","/Pixiv/main.py"]